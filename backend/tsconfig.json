{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/lib.d.ts"],
    "types": ["pino-std-serializers"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
